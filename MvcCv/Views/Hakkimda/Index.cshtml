@using MvcCv.Models.Entity;
@model List<TblHakkimda>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h4>Hakkımda Düzenleme Sayfası</h4>
<br />
<form method="post">
    @foreach (var item in Model)
    {
        <label>Ad</label>
        <input type="text" name="Ad" value="@item.Ad" class="form-control" placeholder="İsim: " />
        <br />
        <label>Soyad</label>
        <input type="text" name="Soyad" value="@item.Soyad" class="form-control" placeholder="Soyisim: " />
        <br />
        <label>Adres</label>
        <input type="text" name="Adres" value="@item.Adres" class="form-control" placeholder="Adres: " />
        <br />
        <label>Telefon</label>
        <input type="text" name="Telefon" value="@item.Telefon" class="form-control" placeholder="Telefon: " />
        <br />
        <label>Mail</label>
        <input type="text" name="Mail" value="@item.Mail" class="form-control" placeholder="Mail: " />
        <br />
        <label>Resim</label>
        <input type="text" name="Resim" value="@item.Resim" class="form-control" placeholder="Resim: " />
        <br />
        <label>Açıklama</label>
        <textarea name="Aciklama" class=" form-control" rows="10" cols="50" placeholder="Açıklama: ">@item.Aciklama</textarea>
        <br />
    }
    <button class="btn btn-info">Kaydet</button>
</form>