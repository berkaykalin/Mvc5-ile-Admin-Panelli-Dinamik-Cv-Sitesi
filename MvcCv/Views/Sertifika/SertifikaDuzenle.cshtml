@model MvcCv.Models.Entity.TblSertifikalarim
@{
    ViewBag.Title = "SertifikaDuzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Sertifika Düzenleme Sayfası</h2>
<br />
<form method="post">
    @Html.Label("Sertifika Adı: ")
    @Html.TextBoxFor(x => x.Aciklama, new { @class = "form-control" })
    <br />
    @Html.Label("Tarih: ")
    @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control" })
    <br />
    <div></div>
    <button class="btn btn-info">Güncelle</button>
    <a href="/Sertifika/SertifikaSil/@ViewBag.d" class="btn btn-danger">Sil</a>
</form>