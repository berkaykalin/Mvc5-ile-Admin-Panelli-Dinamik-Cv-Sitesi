@using MvcCv.Models.Entity;
@model List<TblSertifikalarim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- /.col -->
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header p-2">
                        </div><!-- /.card-header -->
                        <div class="card-body">
                            <!-- /.tab-pane -->
                            <div class="tab-pane" id="timeline">
                                <!-- The timeline -->
                                <div class="timeline timeline-inverse">
                                    <!-- timeline time label -->
                                    @foreach (var item in Model)
                                    {
                                        if (item.ID % 2 == 1)
                                        {
                                            <div class="time-label">
                                                <a href="/Sertifika/SertifikaDuzenle/@item.ID" class="btn btn-success">
                                                    <span class="bg-success">
                                                        @item.Tarih
                                                    </span>
                                                </a>

                                            </div>
                                        }
                                        else
                                        {
                                            <div class="time-label">
                                                <a href="/Sertifika/SertifikaDuzenle/@item.ID" class="btn btn-primary">
                                                    <span class="bg-primary">
                                                        @item.Tarih
                                                    </span>
                                                </a>
                                            </div>
                                        }
                                        <div>
                                            <div class="timeline-item">
                                                <div class="timeline-body">
                                                    @item.Aciklama
                                                </div>
                                            </div>
                                        </div>
                                        <!-- END timeline item -->
                                        <!-- timeline item -->
                                    }
                                </div>
                                <a href="/Sertifika/SertifikaEkle" class="btn btn-primary">Yeni Sertifika Ekle</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>
